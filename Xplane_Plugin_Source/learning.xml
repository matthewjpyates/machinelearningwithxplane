<?xml version="1.0">
<plugin>
	<settings name="xmlPluginTest" recordRate="1.0" stepRate=".03125" 
		reloadEveryRun="true" reloadEveryChange="false" debug="false">
	</settings>
	<measures>
		<measure>elevation</measure>
		<measure>speed</measure>
		<measure>pitch</measure>
		<measure>sim/flightmodel/controls/elv_trim</measure>
	</measures>
	<runresets>
	</runresets>
	<recordresets>
	</recordresets>
	<stepresets>
		<stepreset dataref="sim/flightmodel/misc/wing_tilt_roll"  value="0"> </stepreset>
		<stepreset dataref="sim/flightmodel/controls/sbrkrat"     value="0"> </stepreset>
		<stepreset dataref="sim/flightmodel/controls/l_brake_add" value="0"> </stepreset>
		<stepreset dataref="sim/flightmodel/controls/r_brake_add" value="0"> </stepreset>
		<stepreset dataref="sim/flightmodel/controls/lail1def"    value="0"> </stepreset>
		<stepreset dataref="sim/flightmodel/controls/lail2def"    value="0"> </stepreset>
		<stepreset dataref="sim/flightmodel/controls/rail1def"    value="0"> </stepreset>
		<stepreset dataref="sim/flightmodel/controls/rail2def"    value="0"> </stepreset>
		<stepreset dataref="sim/flightmodel/controls/ldruddef"    value="0"> </stepreset>
		<stepreset dataref="sim/flightmodel/controls/rdruddef"    value="0"> </stepreset>
		<stepreset dataref="sim/flightmodel/controls/lsplrdef"    value="0"> </stepreset>
		<stepreset dataref="sim/flightmodel/controls/rsplrdef"    value="0"> </stepreset>
		<stepreset dataref="sim/flightmodel/controls/sbrkrqst"    value="0"> </stepreset>
		<stepreset dataref="sim/cockpit2/controls/rudder_trim"    value="0"> </stepreset>
		<stepreset dataref="roll"                                 value="0"> </stepreset>
	</stepresets>
	<samples>
		<sample dataref="sim/flightmodel/controls/elv_trim">
			<listoptions>
				<option>-1</option>
				<option>-0.5</option>
				<option>0.0</option>
				<option>0.5</option>
				<option>1</option>
			</listoptions>
		</sample>
	</samples>
	<runbuttons>
	</runbuttons>
	<recordbuttons>
		<button>xplm_joy_throt_up</button>
	</recordbuttons>
	<stepbuttons>
		<button>xplm_joy_rud_cntr</button>
		<button>xplm_joy_tim_reset</button>
	</stepbuttons>

	<runkeys>
		<key>xplm_key_brakesreg</key>
	</runkeys>
	<recordkeys>
	</recordkeys>
	<stepkeys>
	</stepkeys>

</plugin>
